---
import type { HTMLAttributes } from "astro/types";
import { slugify } from "@/lib/utils";

interface Props extends HTMLAttributes<"input"> {
  name: string;
}

const { name, ...rest } = Astro.props;
---

<label for={slugify(name)} class="mb-2">
  <slot />
  <span class="text-theme-green-medium">*</span>
</label>

<input
  transition:persist
  type="text"
  id={slugify(name)}
  name={name}
  class="rounded-lg border-1 border-theme-grey-medium px-4 py-2 hover:cursor-pointer focus:border-theme-green-medium focus:outline-none sm:py-3"
  aria-required="true"
  {...rest}
/>
